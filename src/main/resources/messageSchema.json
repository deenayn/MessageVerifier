{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Message",
  "type": "object",
  "properties": {
    "ts": {
      "type": "string",
      "pattern": "^[1-9]\\d*$"
    },
    "sender": {
      "type": "string"
    },
    "message": {
      "type": "object",
      "properties": {
        "foo": {
          "type": "string"
        },
        "baz": {
          "type": "string"
        }
      },
      "anyOf": [
        {"required": ["foo"]},
        {"required": ["baz"]}
      ],
      "additionalProperties": false
    },
    "sent-from-ip": {
      "type": "string",
      "format": "ipv4"
    },
    "priority": {
      "type": "integer"
    }
  },
  "required": ["ts", "sender", "message"],
  "additionalProperties": false
}
